{
    "name": "behindthep/cli-games",
    "description": "CLI games",
    "authors": [
        {
            "name": "Alexey Kolvakh",
            "email": "al.kolv19@gmail.com"
        }
    ], 
    "require": {
        "wp-cli/php-cli-tools": "^0.12.1"
    },
    "license": "MIT",
    "bin": [
        "bin/brain-even",
        "bin/brain-calc",
        "bin/brain-gcd",
        "bin/brain-progression",
        "bin/brain-prime"
    ],
    "autoload": {
        "psr-4": {
            "BrainGames\\": "src/"
        },
        "files": [
            "src/Games/Calc.php",
            "src/Games/Even.php",
            "src/Games/Gcd.php",
            "src/Games/Prime.php",
            "src/Games/Progression.php",
            "src/Engine.php"
        ]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*"
    }
}
